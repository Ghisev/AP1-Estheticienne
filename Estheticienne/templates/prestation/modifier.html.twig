{% extends 'base.html.twig' %}

{% block title %}Modifier la prestation{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
<link rel="stylesheet" href="{{ asset('assets/css/header.css') }}">

<div class="container_page_presta">
    {{ form_start(formModifierPrestation) }}

    <div class="container_ajouter_prestation">
        <div class="titre">
            <h2 class="titre_add_presta agbalumo400">Modifier la prestation</h2>
        </div>

        <div class="libelle">
            <label for="libelle">Libellé de la prestation :</label>
            {{ form_widget(formModifierPrestation.libelle) }}
        </div>

        <div class="categorie">
            <label for="categorie">Catégorie :</label>
            {{ form_widget(formModifierPrestation.categorie) }}
        </div>

        <div class="categorie_img">
            <label for="categorie_img">Image de la prestation :</label>
            {{ form_widget(formModifierPrestation.categorie_img) }}
        </div>

        <div class="prix">
            <label for="prix">Prix :</label>
            {{ form_widget(formModifierPrestation.prix) }}
        </div>

        <div class="btn_add">
            <button type="submit" class="btn">Modifier la prestation</button>
        </div>
    </div>

    {{ form_end(formModifierPrestation) }}

    <div class="btn_retour">
        <form action="{{ path('app_prestation') }}" method="get">
            <button class="btn">Retour à la liste des prestations</button>
        </form>
    </div>
</div>
{% endblock %}
