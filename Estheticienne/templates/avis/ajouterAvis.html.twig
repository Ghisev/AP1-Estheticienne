{% extends 'base.html.twig' %}

{% block title %}Laissez un avis{% endblock %}

{% block body %}

    {% if is_granted('ROLE_USER') %}
        <div class="avis">
            {{form_start(formAjoutAvis)}}
            {{form_row(formAjoutAvis.texte)}}
            <button class="boutonAjoutAvisForm" type="submit">{{button_label | default('Publier')}}</button>
            {{form_end(formAjoutAvis)}}
            <form action="{{ path('app_avis') }}" method="get">
                <button class="boutonAjoutAvis" type="submit">Retour</button>
            </form>
        </div>
    {% else %}

    {% endif %}

{% endblock %}
