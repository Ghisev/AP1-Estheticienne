                <div class="btn-avis"><a {#href="{{path('app_avis')}}"#} >Avis</a></div>
                <div class="empty6"></div>
                <div class="btn-contact"><a {#href="{{path('app_contact')}}"#} >Contact</a></div>
                <div class="empty7"></div>
                <div class="connexion"><a href="{{path('app_login')}}" >Connexion</a></div>
                <div class="empty8"></div>
                <div class="inscription"><a href="{{path('app_register')}}" >Créer un compte</a></div>
                <div class="empty9"></div>
            </div>
        {% endif %}

        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
