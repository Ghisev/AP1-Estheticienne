                <div class="btn-avis"><a {#href="{{path('app_avis')}}"#} >Avis</a></div>
                <div class="empty6"></div>
                <div class="btn-contact"><a {#href="{{path('app_contact')}}"#} >Contact</a></div>
                <div class="empty7"></div>
                <div class="deconnexion"><a href="{{path('app_logout')}}" >Déconnexion</a></div>
                <div class="empty8"></div>
