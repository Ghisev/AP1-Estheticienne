{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<link rel="stylesheet" href="../assets/css/register.css">

<h1 class="agbalumo600 boir">Inscription</h1>

{{ form_start(registrationForm) }}  {# Démarre le formulaire #}
{{ form_errors(registrationForm) }}  {# Affiche les erreurs générales du formulaire #}

<div class="container_register">
    <!-- Email -->
    <div class="txt-mail">
        {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
    </div>
    <div class="input-mail">
        {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-input'} }) }}
    </div>

    <!-- Password -->
    <div class="txt-mdp">
        {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-label'}}) }}
    </div>
    <div class="input-mdp">
        {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'form-input'} }) }}
    </div>

    <!-- Agree Terms -->
    <div class="checkbox">
        {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(registrationForm.agreeTerms, { 'attr': {'class': 'form-input-checkbox'} }) }}
    </div>

    <!-- Submit Button -->
    <div class="bouton">
        <button type="submit" class="btn_acc inter400">Register</button>
    </div>
</div>

{{ form_end(registrationForm) }} {# Ferme le formulaire #}
{% endblock %}
